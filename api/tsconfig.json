{
  "compilerOptions": {
    // "rootDirs": ["src"],
    "paths":{
      "@generated/*": ["..dist/prisma/generated/*"]
    },
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*.js", "./node_modules/**/*"]
}